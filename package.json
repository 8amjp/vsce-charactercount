{
    "name": "charactercount",
    "displayName": "CharacterCount",
    "description": "文字数をリアルタイムでカウントする、Visual Studio Codeの機能拡張です。",
    "version": "0.3.another",
    "publisher": "8amjp",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/icon.png",
    "activationEvents": [
        "onLanguage:markdown",
        "onLanguage:plaintext"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/8amjp/vsce-charactercount.git"
    },
    "contributes": {
        "configuration": {
            "title": "文字数カウント設定",
            "properties": {
                "charactercount.supporting.language": {
                    "type": "string",
                    "default": "",
                    "description": "対応する言語を指定してください"
                }
            }
        }
    },
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.8.0",
        "typescript": "^2.8.3",
        "vscode": "^1.1.16"
    }
}
